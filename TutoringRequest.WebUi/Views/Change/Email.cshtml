@using TutoringRequest.WebUi.ViewModel.Change
@model ChangeEmailViewModel

<h2>Change Email</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="ChangeEmail">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentEmail"></label>
        <input asp-for="CurrentEmail" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="NewEmail"></label>
        <input asp-for="NewEmail" class="form-control" />
        <span asp-validation-for="NewEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmNewEmail"></label>
        <input asp-for="ConfirmNewEmail" class="form-control" />
        <span asp-validation-for="ConfirmNewEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Email</button>
</form>
