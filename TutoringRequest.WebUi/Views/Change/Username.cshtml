@using TutoringRequest.WebUi.ViewModel.Change
@model ChangeUsernameViewModel

<h2>Change Username</h2>

<form asp-action="ChangeUsername">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentUsername"></label>
        <input asp-for="CurrentUsername" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="NewUsername"></label>
        <input asp-for="NewUsername" class="form-control" />
        <span asp-validation-for="NewUsername" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Username</button>
</form>
