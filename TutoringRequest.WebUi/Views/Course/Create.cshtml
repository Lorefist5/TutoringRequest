@model AddCourseViewModel

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Course" asp-action="Create" method="post">
    <div class="form-group">
        <label for="CourseName">Name:</label>
        <input type="text" class="form-control" id="CourseName" name="AddCourseDto.CourseName" required>
    </div>

    <div class="form-group">
        <label for="Major">Major:</label>
        <select class="form-control" id="Major" name="AddCourseDto.MajorId" required>
            @foreach (var major in Model.Majors)
            {
                if(ViewBag.SelectedMajorId == major.Id)
                {
                    <option value="@major.Id" selected="selected">@major.MajorName</option>
                }
                else
                {
                    <option value="@major.Id">@major.MajorName</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <div class="col-12">
            <button type="submit" class="btn btn-primary mt-2 w-100">Add Course</button>
        </div>
    </div>


</form>
