@model CourseDto;

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Course" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label class="fs-3" for="CourseName">Name:</label>
        <label class="fs-3">@Model.CourseName</label>
    </div>

    <div class="form-group">
        <div class="col-12">
            <button type="submit" class="btn btn-danger mt-2 w-100">Delete Course</button>
        </div>
    </div>
</form>
