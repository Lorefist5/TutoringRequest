@model MajorViewModel

@{
    ViewData["Title"] = "Course List";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Major.MajorName</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create", "Course", new { majorId = Model.Major.Id})" class="btn btn-success mb-3">Add Course</a>
    }
    <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@course.CourseName</h5>
                        @if (User.IsInRole("Student") || User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Schedule", "Course", course)" class="btn btn-info text-white">Schedule</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>