@model AddMajorViewModel
@{
    ViewData["Title"] = "Create Major";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Major" asp-action="CreateMethod" method="post">
    <div class="form-group">
        <label for="CourseName">Name:</label>
        <input type="text" class="form-control" id="CourseName" name="AddMajorViewModel.Major.MajorName" required>
    </div>
    <div class="form-group">
        <div class="col-12">
            <button type="submit" class="btn btn-primary mt-2 w-100">Add major</button>
        </div>
    </div>


</form>
